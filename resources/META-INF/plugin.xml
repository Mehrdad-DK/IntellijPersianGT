<idea-plugin>
    <id>com.xiuyukeji.plugin.translation</id>
    <name>GoogleTranslation</name>
    <version>1.0.2</version>
    <vendor email="mehrdad.def@gmail.com" url="https://github.com/a483210">a483210</vendor>

    <description>
        <![CDATA[<h1>GoogleTranslation</h1>]]>
    </description>



    <idea-version since-build="145.0"/>


    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">

    </extensions>

    <actions>

        <action id="GoogleTranslation" class="com.github.mehrdaddk.GoogleTranslation"
                text="Translate" description="Google Translator">
            <add-to-group group-id="EditMenu" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt 1"/>
        </action>
    </actions>

</idea-plugin>